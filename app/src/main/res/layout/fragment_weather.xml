<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_6sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    tools:context=".WeatherFragment"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/tv_weather_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weather_date_sdf_format"
        android:layout_marginStart="@dimen/_2sdp"
        android:textSize="@dimen/_18sdp" />

    <TextView
        android:id="@+id/tv_weather_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:text="@string/weather_time_sdf_format"
        android:textSize="@dimen/_36sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/fg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_now_header"
            android:textColor="@color/fg_gray"
            android:textSize="@dimen/_20sdp" />

        <Space
            android:layout_width="@dimen/_4sdp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_weather_now_icon"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_weight="0"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_clear"
            app:tint="@color/fg_white" />

        <Space
            android:layout_width="@dimen/_4sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_now_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus4sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_30sdp" />

            <TextView
                android:id="@+id/tv_weather_now_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus4sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_weather_anc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_anc1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus4sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_weather_anc1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/_26sdp" />

                <Space
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_weather_anc1_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_subtext_indicator"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:id="@+id/spc_weather_pre_anc2"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_anc2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_anc2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus4sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_weather_anc2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/_26sdp" />

                <Space
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_weather_anc2_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_subtext_indicator"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:id="@+id/spc_weather_pre_anc3"
            android:layout_width="@dimen/_11sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_anc3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_anc3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus4sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_weather_anc3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/_26sdp" />

                <Space
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_weather_anc3_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_subtext_indicator"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_weather_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_day1_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_weather_day1_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_clear"
                app:tint="@color/fg_white" />

            <TextView
                android:id="@+id/tv_weather_day1_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_weather_day1_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_day2_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_weather_day2_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_clear"
                app:tint="@color/fg_white" />

            <TextView
                android:id="@+id/tv_weather_day2_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_weather_day2_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_day3_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_weather_day3_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_clear"
                app:tint="@color/fg_white" />

            <TextView
                android:id="@+id/tv_weather_day3_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_weather_day3_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_day4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_day4_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_weather_day4_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_clear"
                app:tint="@color/fg_white" />

            <TextView
                android:id="@+id/tv_weather_day4_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_weather_day4_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_weather_day5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_day5_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textColor="@color/fg_gray"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/iv_weather_day5_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_clear"
                app:tint="@color/fg_white" />

            <TextView
                android:id="@+id/tv_weather_day5_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_minus2sdp"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_weather_day5_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_weather_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textSize="@dimen/_4sdp" />

</LinearLayout>